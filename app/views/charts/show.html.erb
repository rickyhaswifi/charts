        <div class="col-2">
        <h1 class="chart-song-position"> <%= song.id %> </h1>
        </div>

            <div class=row>
                <div class="col-11">
                <h4 class="chart-song-title"><%= song.title %> <br> <%= song.artist %> </h4> <br> Album: <%= song.album %> <br> Genre: <%= song.genre %> 
                </div>
                <div class="col-1">
                <p class="chart-song-edit"> <%= link_to 'âœŽ', [@chart, song] %> </p>
                </div>
            </div>

         <div class="col-10 hide"></div>
    </div>

    </li>
  <% end %>
</ul>

</div>
<div class="col"></div>
</div>
</div>

<p>What do you like to do?</p>

